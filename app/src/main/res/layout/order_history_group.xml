<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="15dp"
    android:background="@color/colorPrimary">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:id="@+id/tv_restaurant_name" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:src="@drawable/ic_remove"
        android:id="@+id/iv_order_remove"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_restaurant_name"
        android:layout_alignBottom="@id/tv_restaurant_name"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/add_to_cart"
        android:id="@+id/iv_add_to_cart"
        android:layout_alignTop="@id/tv_restaurant_name"
        android:layout_alignBottom="@id/tv_restaurant_name"
        android:layout_toStartOf="@id/iv_order_remove"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/navigation"
        android:id="@+id/iv_navigation"
        android:layout_alignTop="@id/tv_restaurant_name"
        android:layout_alignBottom="@id/tv_restaurant_name"
        android:layout_toStartOf="@id/iv_add_to_cart"
        android:scaleType="fitCenter"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_restaurant_name"
        android:text="Date"
        android:textColor="@color/white"
        android:id="@+id/tv_order_date"
        android:paddingBottom="5dp"/>

</RelativeLayout>