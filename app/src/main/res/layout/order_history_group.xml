<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingLeft="20dp"
    android:paddingEnd="15dp"
    android:paddingRight="15dp">


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/order_history_group" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:src="@drawable/remove"
        android:id="@+id/order_history_remove"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/order_history_group"
        android:layout_alignBottom="@id/order_history_group"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/add_to_cart_dark"
        android:id="@+id/order_history_addToCart"
        android:layout_alignTop="@id/order_history_group"
        android:layout_alignBottom="@id/order_history_group"
        android:layout_toLeftOf="@id/order_history_remove"
        android:layout_toStartOf="@id/order_history_remove"
        android:scaleType="fitCenter"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_history_group"
        android:text="Date"
        android:id="@+id/order_history_date"
        android:paddingBottom="5dp"/>

</RelativeLayout>